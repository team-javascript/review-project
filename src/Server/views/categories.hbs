<main>
    <form class="form" action="/categories/add" method="POST">
        <label><input type="text" name="category" placeholder="Category"></label>
            <button class="submit__button"> New Category </button>
    </form>
    <table class="table__categories">
        {{#each categories}}
        <tr class="list__categories">
            <th><a href="/categories/{{_id}}">{{category}}</a></th>
        </tr>
        {{/each}}
    <table>
</main>