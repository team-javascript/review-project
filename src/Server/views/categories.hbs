<main>
    <form class="form" action="/categories/add" method="POST">
        <label class="label__add-category">Category: <input class="input__add-list" type="text" name="category"></label>
            <button class="submit__button">Add Category</button>
    </form>
    <table class="table__categories">
        {{#each categories}}
        <tr class="lists__categories">
            <th><a class="link__categories" href="/categories/{{_id}}">{{category}}</a></th>
        </tr>
        {{/each}}
    <table>
</main>