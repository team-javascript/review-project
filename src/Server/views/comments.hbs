<main>
    <form class="form" action="/comments/add" method="POST">
        <label>Comments: <input type="text" name="comment"></label>
            <button class="submit__button">Submit</button>
    </form>
    <ul class="list">
        {{#each comments}}
        <li class="list__item">
            <a href="/comments/{{_id}}">{{input}} {{comment}}</a>
        </li>
        {{/each}}
    </ul>
</main>