<main>
   <div class="reviews__container">
      <ul class="reviews__meme__cards">
   <div class="container">
      <div class="details-wrapper">
         <form action="/reviews/add" method="POST">
            Title <input type="text" name="title" />
            Image Url<input type="text" name="imageUrl" />
            <label>
               Category: 
            <select name="categoryId">
               {{#each categories}}
               <option value="{{id}}">{{categoryTitle}}</option>
               {{/each}}
            </select>
            </label>
            Content<input type="text" name="content" />
            <button type="submit">Add Meme</button>
         </form>
      </div>
      <ul class="meme__cards">
         {{#each reviews}}
         <li class="reviews__meme__card">
            <figure class="reviews__meme__fegure"><a href="/reviews/{{id}}"><img class="reviews__meme__image" src="{{imageUrl}}" alt="{{title}}"></figure></a>
            <a class="reviews__meme__link" href="/reviews/{{id}}">{{title}}</a>
         </li>
         {{/each}}
      </ul>
      <nav class="reviews__nav__tab">
         <ul class="reviews__nav__tabs">
            {{!-- <a class="tab"><a href=""></a></a> --}}
            {{!-- <a class="tab"><a href="/views/reviews.hbs">Reviews</a></a> --}}
         </ul>
      </nav>
   </div>
   <a class="reviews__add-card-button" href="/add/">Add a card</a>
      </nav>
   </div>
</main>