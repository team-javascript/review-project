<main>
    <section class="tag-details">
        <h1 class="tag__name">{{tag.tag}}</h1>
        <ul class="list">
            {{#each tag.reviews}}
            <li class="list__item"><a href="/reviews/{{_id}}"> {{title}}</a>
            </li>
            {{/each}}
        </ul>
    </section>
</main>